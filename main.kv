#:kivy 2.3.1
#:include kivy_uis/year_screen.kv
#:include kivy_uis/month_screen.kv
#:include kivy_uis/week_screen.kv
#:include kivy_uis/selectors.kv

GridLayout:
    cols: 1
    CalendarScreens:
        id: calendar_screen_manager

<CalendarScreens@ScreenManager>:
    Screen:
        name: 'year_screen'
        YearScreens:
            id: year_screen_manager
    Screen:
        name: 'month_screen'
        MonthScreens:
            id: month_screen_manager
    Screen:
        name: 'week_screen'
        WeekScreens:
            id: week_screen_manager

<YearScreens@ScreenManager>:
    CurrentYearScreen:
        name: 'current_year'
    NextYearScreen:
        name: 'next_year'
    PrevYearScreen:
        name: 'prev_year'

<MonthScreens@ScreenManager>:
    CurrentMonthScreen:
        name: 'current_month'
    NextMonthScreen:
        name: 'next_month'
    PrevMonthScreen:
        name: 'prev_month'

<WeekScreens@ScreenManager>:
    CurrentWeekScreen:
        name: 'current_week'
    NextWeekScreen:
        name: 'next_week'
    PrevWeekScreen:
        name: 'prev_week'
