#:kivy 2.3.1
<MonthView>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    Label:
        id: month_label
        size_hint_y: 0.1

    GridLayout:
        id: month_grid
        cols: 7

<YearView>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    Label:
        id: year_label
        size_hint_y: 0.1
    GridLayout:
        id: year_grid
        cols: 3
        rows: 4

<WeekView>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    Label:
        id: week_label
        size_hint_y: 0.1
        halign: 'center'

    GridLayout:
        id: week_days
        cols: 7
        size_hint_y: 0.1

    BoxLayout:
        orientation: 'vertical'
        # ScrollView:
        #     do_scroll_x: False
        #     do_scroll_y: True
        GridLayout:
            id: week_grid
            cols: 7

<WeekGrid>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: (*self.pos, *self.size)
            width: 1.1

<WeekEvent>:
    canvas:
        Color:
            rgba: 0, 0.9, 0.6, 1
        Rectangle:
            size: self.size
            pos: self.pos

<DayView>:
    title: root.selected_day_text
    title_align: 'center'
    size_hint: 0.9, 0.9
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            padding: dp(10)
            spacing: dp(10)
            GridLayout:
                id: events_list
                cols: 1

        Button:
            text: 'Add Event'
            size_hint_y: 0.1
            on_release: root.add_event(self)

        Button:
            text: 'Close'
            size_hint_y: 0.1
            on_release: root.close_popup(self)

<AddEventPopup>:
    title: 'Add Event'
    title_align: 'center'
    size_hint: 0.8, 0.6
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)
        TextInput:
            id: event_name
            size_hint_y: 0.35
            hint_text: 'Event Name'
            multiline: False

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            size_hint_y: 0.35
            Label:
                text: 'Date'
                size_hint_x: 0.2
            Button:
                text: root.selected_date_start
                on_release: root.toggle_date_selector(self, 'start')

            Button:
                text: root.selected_date_end
                on_release: root.toggle_date_selector(self, 'end')

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            size_hint_y: 0.35
            Label:
                text: 'Time'
                size_hint_x: 0.2
            Button:
                text: root.selected_time_start
                on_release: root.toggle_time_selector(self, 'start')

            Button:
                text: root.selected_time_end
                on_release: root.toggle_time_selector(self, 'end')

        TextInput:
            id: event_location
            hint_text: 'Location'
            size_hint_y: 0.35
            multiline: False

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                id: event_add_btn
                text: 'Add Event'
                spacing: dp(5)
                size_hint: 0.5, 0.3
                on_release: root.save_event(self)
