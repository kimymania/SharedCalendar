        #             width: 2
        #             rectangle: self.x, self.y, self.width, self.height
        #     DateSelector:

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            Button:
                text: root.selected_time
                on_release: root.toggle_time_selector(self, 'start')

            Button:
                text: root.selected_time
                on_release: root.toggle_time_selector(self, 'start')

        TextInput:
            id: event_location
            hint_text: 'Location'
            multiline: False

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                id: event_add_btn
                text: 'Add Event'
                spacing: dp(5)
                size_hint: 0.5, 0.3
                on_release: root.save_event(self)
