<CalendarUI>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    Label:
        id: month_label
        size_hint_y: 0.1

    GridLayout:
        id: calendar_grid
        cols: 7

<DayView>:
    title: root.selected_day_text
    title_align: 'center'
    size_hint: 0.9, 0.9
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: events_list
            orientation: 'vertical'
            size_hint_y: 0.8
            padding: dp(10)
            spacing: dp(10)

        Button:
            text: 'Add Event'
            size_hint_y: 0.1
            on_release: root.add_event(self)

        Button:
            text: 'Close'
            size_hint_y: 0.1
            on_release: root.close_popup(self)

<AddEventPopup>
    title: 'Add Event'
    title_align: 'center'
    size_hint: 0.8, 0.8
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        TextInput:
            id: event_name
            hint_text: 'Event Name'
            multiline: False

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            Button:
                text: root.selected_date_start
                on_release: root.toggle_date_selector(self, 'start')

            Button:
                text: root.selected_date_end
                on_release: root.toggle_date_selector(self, 'end')

        # BoxLayout:
        #     id: date_selector
        #     orientation: 'vertical'
