#:kivy 2.3.1
<DateSelector>:
    title: 'Select Date'
    title_align: 'center'
    size_hint: 0.8, 0.6
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: dp(10)
            Button:
                id: selector_prev_month
                text: '<'
                size_hint_x: 0.3
                on_release: root.navigate_cal('prev')

            Label:
                id: selector_month
                text_align: 'center'

            Button:
                id: selector_next_month
                text: '>'
                size_hint_x: 0.3
                on_release: root.navigate_cal('next')

        GridLayout:
            id: selector_calendar
            cols: 7

<TimeSelector>:
    title: 'Select Time'
    title_align: 'center'
    size_hint: 0.8, 0.4
    BoxLayout:
        id: time_selector
        orientation: 'horizontal'
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: select_meridiem
                cols: 1
                rows: 2
                size_hint_y: None
                height: self.minimum_height
                Button:
                    id: am_indicator
                    text: 'AM'
                    size_hint_y: None
                    height: dp(40)
                    on_release: root.select_meridiem_indicator(self, 'AM')
                Button:
                    id: pm_indicator
                    text: 'PM'
                    size_hint_y: None
                    height: dp(40)
                    on_release: root.select_meridiem_indicator(self, 'PM')
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: select_hour
                cols: 1
                rows: 12
                size_hint_y: None
                height: self.minimum_height
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: select_minute
                cols: 1
                rows: 60
                size_hint_y: None
                height: self.minimum_height

# Basic 2 x 3 colour selector
<ColourPicker>:
    title: 'Select Colour'
    title_align: 'center'
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Selected Colour'
            size_hint_y: 0.1
            color: root.selected_colour
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.9
            GridLayout:
                cols: 2
                rows: 3
                Button:
                    text: ''
                    background_color: 1, 0, 0, 1
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 0, 1, 0, 1
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 0, 0, 1, 1
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 1, 1, 0, 1
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 1, 0, 1, 1
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 0, 1, 1, 1
                    on_release: root.select_colour(self.background_color)
