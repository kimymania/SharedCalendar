#:kivy 2.3.1
<DateSelector@Popup>:
    title: 'Select Date'
    title_align: 'center'
    size_hint: 0.8, 0.6
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: dp(10)
            Button:
                id: selector_prev_month
                text: '<'
                size_hint_x: 0.3
                on_release: root.navigate_cal('prev')
            Label:
                id: selector_month
                text_align: 'center'
            Button:
                id: selector_next_month
                text: '>'
                size_hint_x: 0.3
                on_release: root.navigate_cal('next')
        GridLayout:
            id: selector_calendar
            cols: 7

<TimeSelector@Popup>:
    title: 'Select Time'
    title_align: 'center'
    size_hint: 0.8, 0.4
    # FloatLayout:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: time_selector
            orientation: 'horizontal'
            size_hint: 1, 0.9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            ScrollView:
                id: scroll_view_meridian
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: select_meridiem
                    cols: 1
                    rows: 2
                    size_hint_y: None
                    height: self.minimum_height
                    Button:
                        id: am_indicator
                        text: 'AM'
                        size_hint_y: None
                        height: dp(40)
                        on_release: root.select_meridiem_indicator(self, 'AM')
                    Button:
                        id: pm_indicator
                        text: 'PM'
                        size_hint_y: None
                        height: dp(40)
                        on_release: root.select_meridiem_indicator(self, 'PM')
            ScrollView:
                id: scroll_view_hour
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: select_hour
                    cols: 1
                    rows: 12
                    size_hint_y: None
                    height: self.minimum_height
            ScrollView:
                id: scroll_view_minute
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: select_minute
                    cols: 1
                    rows: 60
                    size_hint_y: None
                    height: self.minimum_height
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.05
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                text: 'OK'
                on_release: root.close_and_save(self)
            Button:
                text: 'Cancel'
                on_release: root.dismiss()

# Basic 2 x 3 colour selector`
<ColourPicker@Popup>:
    title: '태그 색깔 선택'
    title_align: 'center'
    title_color: app.colour_text
    size_hint: 0.5, 0.5
    background: ''
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: colour_text
            text: '태그'
            size_hint_y: 0.1
            color: root.selected_colour
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.9
            GridLayout:
                cols: 2
                rows: 3
                Button:
                    text: ''
                    background_color: 1, 0, 0, 1
                    background_normal: ''
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 0, 1, 0, 1
                    background_normal: ''
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 0, 0, 1, 1
                    background_normal: ''
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 1, 1, 0, 1
                    background_normal: ''
                    on_release: root.select_colour(self.background_color)
                Button:
                    text: ''
                    background_color: 1, 0, 1, 1
                    background_normal: ''
                    on_release: root.select_colour(self.background_color)
                Button:
