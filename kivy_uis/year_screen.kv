        id: prev_year_label
        size_hint_y: 0.1
    GridLayout:
        id: prev_year_grid
        cols: 3
        rows: 4

<NextYearScreen>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    Label:
        id: next_year_label
        size_hint_y: 0.1
    GridLayout:
        id: next_year_grid
        cols: 3
        rows: 4
