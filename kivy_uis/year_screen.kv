#:kivy 2.3.1
<CurrentYearScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        Label:
            id: current_year_label
            size_hint_y: 0.1
        GridLayout:
            id: current_year_grid
            cols: 3
            rows: 4

