#:kivy 2.3.1
<CurrentWeekScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        Label:
            id: current_week_label
            size_hint_y: 0.1
            halign: 'center'

        GridLayout:
            id: current_week_days
            cols: 7
            size_hint_y: 0.1

        GridLayout:
            id: current_week_grid
            cols: 7

